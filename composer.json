{
  "name": "torann/laravel-repository",
  "description": "Base repository implementation for Laravel",
  "keywords": [
    "laravel",
    "repository",
    "repository pattern",
    "eloquent",
    "repositories"
  ],
  "license": "BSD-2-Clause",
  "authors": [
    {
      "name": "Daniel Stainback",
      "email": "torann@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/support": "^8.0|^9.0|^10.0|^11.0",
    "illuminate/database": "^8.0|^9.0|^10.0|^11.0",
    "illuminate/cache": "^8.0|^9.0|^10.0|^11.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "mockery/mockery": "^1.4",
    "phpstan/phpstan": "^2.0",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "Torann\\LaravelRepository\\": "src/"
    }
  },
  "autoload-dev": {
    "files": [
      "tests/TestFunctions.php"
    ],
    "psr-4": {
      "Torann\\LaravelRepository\\Test\\": "tests"
    }
  },
  "archive": {
    "exclude": [
      "/tests"
    ]
  }
}
